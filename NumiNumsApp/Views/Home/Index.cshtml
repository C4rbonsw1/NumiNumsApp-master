@model NumiNumsApp.ViewModels.ShoppingCartViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to NumiNums delivery order system</h1>
    <p class="lead">Please choose from the selection below, fill out an order form and we will contact your shortly iwth a payment link</p>
</div>

<div class="row">
    <div class="col-md-8">
        <h1>Delivery Order Form</h1>
    </div>
    <div class="col-md-4">
        <h1>Your Order:</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <table class="table-home">

            @foreach (var item in Model.Products)
            {
                <tr>
                    <td style="width:6vw">
                        <img src="@Url.Content(item.ImagePath)" alt="Image" class="img-thumb" />
                    </td>
                    <td style="width:20vw">
                        @Html.DisplayFor(modelItem => item.Name)<br />
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td style="width:6vw">
                        @*@Html.DisplayFor(modelItem => item.Price)*@
                        @String.Format("{0:c}", item.Price)
                    </td>

                    <td style="width:6vw">
                        @Html.ActionLink("Add To Cart", "AddToCart", new { id = item.ProductId }) |
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-md-4">
        @*<div class="row">
            <div class="col-md-12">
                @Html.ActionLink("Order", "Index", "Home") |
            </div>
        </div>*@
        <script src="/Scripts/jquery-1.4.4.min.js"
                type="text/javascript"></script>
        <script type="text/javascript">
            $(function () {
                // Document.ready -> link up remove event handler
                $(".RemoveLink").click(function () {
                    // Get the id from the link
                    var recordToDelete = $(this).attr("data-id");
                    if (recordToDelete != '') {
                        // Perform the ajax post
                        $.post("/Home/RemoveFromCart", { "id": recordToDelete },
                            function (data) {
                                // Successful requests get here
                                // Update the page elements
                                if (data.ItemCount == 0) {
                                    $('#row-' + data.DeleteId).fadeOut('slow');
                                } else {
                                    $('#item-count-' + data.DeleteId).text(data.ItemCount);
                                }
                                $('#cart-total').text(data.CartTotal);
                                $('#update-message').text(data.Message);
                                $('#cart-status').text('Cart (' + data.CartCount + ')');
                            });
                    }
                });
            });
        </script>

        <div id="update-message">
        </div>
        <table class="table-home">
            <tr>
                <th>
                    Item
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Quantity
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model.CartItems)
            {
        <tr id="row-@item.RecordId">
            @*<td>
            @Html.ActionLink(item.Product.Name, "Details", "Store", new { id = item.ProductId }, null)
        </td>*@
            <td>
                @item.ProductName
            </td>

            <td>
            </td>
            <td id="item-count-@item.RecordId">
                @item.Count
            </td>
            <td>
                <a href="#" class="RemoveLink"
                   data-id="@item.RecordId">
                    Remove
                    from cart
                </a>
            </td>
        </tr>
            }
            <tr>
                <td>
                    Total
                </td>
                <td>
                </td>
                <td>
                </td>
                <td id="cart-total">
                    @Model.CartTotal
                </td>
            </tr>
        </table>
        <p class="button">
            @Html.ActionLink("Checkout>> ", "OrderForm", "OrderForm")
        </p>
    </div>
</div>