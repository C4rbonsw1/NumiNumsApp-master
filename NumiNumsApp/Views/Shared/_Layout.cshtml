<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header img-thumb">
                <a href="~/Home/Index">
                    <img src="~/Content/Images/site-logo.png" class="img-home">
                </a>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Products", "Index", "Products", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Orders", "Index", "Orders", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("NumiNums", "Index", "Home", new { area = "" }, new { @class = "navbar-brand img-position" })
                }
            </div>
            <div class="nav navbar-nav navbar-right">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>